<?xml version="1.0" encoding="UTF-8"?>
<listener>
    <logger>
        <class>\lapistano\wsunit\Logger\LoggerFilesystem</class>
    </logger>
    <serializer>\lapistano\wsunit\Serializer\Http\SerializerHttpResponseXml</serializer>
    <test case="Example_TestCase" name="testGetData">
        <location dataName="expected" href="http://example.org/data.json"/>
        <location href="http://example.org/data.xml"/>
        <location href="http://example.org/data.txt"/>
    </test>
    <test case="lapistano\wsunit\Logger\LoggerFilesystemTest"
          name='testSanitizeString with data set "string without unallowed char"'>
        <serializer>\lapistano\wsunit\Serializer\Http\SerializerHttpResponseXml</serializer>
        <location dataName="expected" href="http://blog.bastian-feder.de/blog.rss">
            <query>
                <param name="mascott[]">tux</param>
                <param name="mascott[RedHat]">beastie</param>
                <param name="os">Linux</param>
            </query>
        </location>
    </test>
    <test case="lapistano\wsunit\Logger\LoggerFilesystemTest" name="testLog">
        <location href="http://blog.bastian-feder.de/blog.rss"/>
    </test>
    <test case="lapistano\wsunit\Serializer\Type\SerializerTypeJsonTest"
          name='testSerializeExpectingInvalidArgumentException with data set "malformed JSON"'>
        <serializer>\lapistano\wsunit\Serializer\Http\SerializerHttpResponseJson</serializer>
        <logger>
            <class>\lapistano\wsunit\Logger\LoggerFilesystem</class>
            <typeMapping>
                <type name="array">header</type>
                <type name="json">body</type>
            </typeMapping>
        </logger>
        <location href="http://api.geonames.org/citiesJSON">
            <query>
                <param name="north">44.1</param>
                <param name="south">-9.9</param>
                <param name="east">-22.4</param>
                <param name="west">55.2</param>
                <param name="lang">de</param>
                <param name="username">demo</param>
            </query>
        </location>
    </test>
</listener>
